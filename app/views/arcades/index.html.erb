<div class="container-all">


  <div class="card-room">
        <form action="<%= root_path %>" method="get" class="form-inline">
          <input type="text" name="q" class="form-control"  value="<%= params[:q] %>">
          <input type="submit" value="Search" class="btn btn-primary">
        </form>
      <% @arcades.each do |arcade| %>
        <div class='card-room-infos'>

          <div class='title'>
            <h2><%=arcade.name %></h2>
            <p class="card-room-pricing"><%=arcade.price %>â‚¬</p>
          </div>

          <div class='infos_options'>

            <div class='photo'>
            <%= cl_image_tag arcade.photo, height: 170, width: 200, crop: :fill %>
            </div>

            <div class='infos'>

              <div class='address'>
                <p><%=arcade.address %></p>
              </div>

              <div class='card-room-options'>

                <button type="button" class="btn-blue"><%= link_to "See More >", arcade_path(arcade) %></button>

                <% if policy(arcade).destroy? %>
                <button type="button" class="btn btn-red"> <%= link_to "Delete", arcade_path(arcade),
                method: :delete,
                data: { confirm: "Are you sure?" } %></button>
                <% end %>

                <% if policy(arcade).edit? %>
                <button type="button" class="btn btn-yellow"><%= link_to "Edit", edit_arcade_path(arcade) %></button>
                <% end %>
              </div>

            </div>
          </div>

        </div>
      <% end %>
  </div>
  <div
    id="map"
    style="width: 100%; height: 85vh;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAP_API_KEY'] %>">
  </div>
</div>
