<h1>Arcades list</h1>
<%= current_user %>
<% @arcades.each do |arcade| %>
  <h2><%= arcade.name %></h2>
  <p><%= arcade.address %></p>
  <p><%= arcade.zip_code %></p>
  <p><%= arcade.city %></p>
  <h3>Owner</h3>
  <p><%= arcade.owner.name %></p>

  <%= link_to "Delete", arcade_path(arcade),
      method: :delete,
      data: { confirm: "Are you sure?" } %>

    <%= link_to "Edit", edit_arcade_path(arcade) %>
<% end %>
